/* pages/movie-detail/movie-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.head-img{
  width: 100%;
  height: 320rpx;
  /* 模糊效果 */
  -webkit-filter:blur(40rpx);
}

.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  display:flex;
  flex-direction: column;
}

.movie-img{
  height:238rpx;
  width:175rpx;
  position:absolute;
  top: 160rpx;
  right: 30rpx;
  border: 1px solid #fff;
}

.main-title{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top:50rpx;
  margin-left:30rpx;
}

.sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-top: 40rpx;
  margin-left: 30rpx;
}

.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font{
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;  
}
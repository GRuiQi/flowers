<view class="container">
  <image class="head-image" src="{{postData.imgSrc}}"></image>
  <view class="author-date">
    <image class="avatar" src="{{postData.avatar}}"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.date}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
    <view class="circle">
      <image wx:if="{{!collected}}" bind:tap="onCollection" src="/images/icon/collection-anti.png"></image>
      <image wx:else bind:tap="onCollection" src="/images/icon/collection.png"></image>
      <image class="share-img" src="/images/icon/share-anti.png"></image>
    </view>
    <!-- 模拟横线 -->
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.detail}}</text>
</view>
/* pages/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title{
  margin-left: 40rpx;
  font-size: 36rx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 1px;
  color: #4b556c;
}

.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.horizon{
  width: 660rpx;
  height: 2px;
  background-color: #e5e5e5;
  /* 脱离文档流 */
  position: absolute;
  z-index: -99;
}

.circle image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 10rpx;
}

.share-img{
  margin-left: 30rpx;
}

.circle{
  display: flex;
  flex-direction: row;
  /*原来是没有宽度的，给一个和线相同的宽度*/
  width: 660rpx;
  justify-content: flex-end;
}

.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}
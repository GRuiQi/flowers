<view>
  <swiper indicator-dots="true" indicator-color="white"
   autoplay="true" circular interval="4500">
    <swiper-item>
      <image  src="/images/17-1.png"></image>
    </swiper-item>
    <swiper-item >
      <image src="/images/17-2.png"></image>
    </swiper-item>
    <swiper-item>
      <image  src="/images/background/onlyme17-4.png"></image>
    </swiper-item>
    <swiper-item>
      <image  src="/images/background/onlyme17-2.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{postList}}" wx:key="postId">
    <view data-post-id="{{item.postId}}" bind:tap="onGoToDetail" class="post-container">
    <view class="post-author-date">
      <image class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.imgSrc}}"></image>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
      <l-icon class="post-like-image" size="28" name="favor" color="#666"/>
      <text class="post-like-font">{{item.collection}}</text>
      <l-icon class="post-like-image" size="32" name="eye" color="#666"/>
      <text class="post-like-font">{{item.reading}}</text>
    </view>
  </view>
  
  </block>

</view>

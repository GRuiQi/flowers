<view>
  <swiper indicator-dots="true" indicator-color="white"
   autoplay="true" circular interval="4500">
    <swiper-item>
      <image  src="/images/17-1.png"></image>
    </swiper-item>
    <swiper-item >
      <image src="/images/17-2.png"></image>
    </swiper-item>
    <swiper-item>
      <image  src="/images/17-6.png"></image>
    </swiper-item>
    <swiper-item>
      <image  src="/images/background/onlyme17-2.png"></image>
    </swiper-item>
  </swiper>

  <view class="post-container">
    <view class="post-author-date">
      <image class="post-author" src="{{avatar}}"></image>
      <text class="post-date">{{date}}</text>
    </view>
    
    <text class="post-title">{{title}}</text>

    <image class="post-image" src="{{imgSrc}}"></image>

    <text class="post-content">{{content}}</text>

    <!-- <view class="post-like">
      <image class="post-like-image" src="/images/icon/chat.png"></image>
      <text class="post-like-font">92</text>
      <image class="post-like-image" src="/images/icon/view.png"></image>
      <text class="post-like-font">102</text>
    </view> -->
    <view class="post-like">
      <l-icon class="post-like-image" size="28" name="favor" color="#666"/>
      <text class="post-like-font">{{collection}}</text>
      <l-icon class="post-like-image" size="32" name="eye" color="#666"/>
      <text class="post-like-font">{{reading}}</text>
    </view>

  </view>


</view>
